<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="hibernateCache">

	<diskStore path="java.io.tmpdir/eversec/ehcache/hibernate" />

	<!-- DefaultCache setting. -->
	<defaultCache maxEntriesLocalHeap="100" eternal="false"
		timeToIdleSeconds="300" timeToLiveSeconds="600" overflowToDisk="true"
		maxEntriesLocalDisk="100000" />

	<!-- 菜单 -->
	<cache name="com.isharec.framework.entity.Menu"
		maxEntriesLocalHeap="100" eternal="false" overflowToDisk="true"
		maxEntriesLocalDisk="100000" />
	<cache name="com.isharec.framework.entity.Menu.childList"
		maxEntriesLocalHeap="100" eternal="false" overflowToDisk="true"
		maxEntriesLocalDisk="100000" />
	<cache name="com.isharec.framework.entity.Menu.roleList"
		maxEntriesLocalHeap="100" eternal="false" overflowToDisk="true"
		maxEntriesLocalDisk="100000" />

	<!-- 角色 -->
	<cache name="com.isharec.framework.entity.Role"
		maxEntriesLocalHeap="100" eternal="false" overflowToDisk="true"
		maxEntriesLocalDisk="100000" />
	<cache name="com.isharec.framework.entity.Role.menuList"
		maxEntriesLocalHeap="100" eternal="false" overflowToDisk="true"
		maxEntriesLocalDisk="100000" />
	<cache name="com.isharec.framework.entity.Role.userList"
		maxEntriesLocalHeap="100" eternal="false" overflowToDisk="true"
		maxEntriesLocalDisk="100000" />

	<!-- 用户 -->
	<cache name="com.isharec.framework.entity.User"
		maxEntriesLocalHeap="100" eternal="false" overflowToDisk="true"
		maxEntriesLocalDisk="100000" />
	<cache name="com.isharec.framework.entity.User.roleList"
		maxEntriesLocalHeap="100" eternal="false" overflowToDisk="true"
		maxEntriesLocalDisk="100000" />
</ehcache>
